.main-wrapper
  .main-wrapper-body
    = form_for @chat, url: { controller: :chats, action: :create} do |f|
      .chat-form.clearfix
        / = form_for @chat do |f|
        .chat-form__input
          = f.text_field :user_input
        .chat-form__button
          %button
            %span 送信

    .chat-lists
      .chat-lists-body
        .chat-item
          %span.chat-item__datetime
            10:10:00
          %span.chat-item__name
            You >
          %span.chat-item__text
            こんにちは
        .chat-item
          %span.chat-item__datetime
            10:10:00
          %span.chat-item__name
            Bot >
          %span.chat-item__text
            こんにちは

